{
    "source": {
      "include": [
        "mod"
      ],
      "includePattern": ".js$"
    },
    "plugins": [
      "plugins/markdown"
    ],
    "opts": {
      "encoding": "utf8",
      "readme": "./mod/README.md",
      "destination": "docs/",
      "recurse": true,
      "verbose": true,
      "template": "./node_modules/clean-jsdoc-theme",
      "theme_opts": {
        "title": "XYZ",
        "static_dir": ["./public"],
        "favicon": "./public/icons/favicon.ico",
        "homepageTitle": "XYZ"
      }
    },
    "markdown": {
      "hardwrap": false,
      "idInHeadings": true
    }
  }